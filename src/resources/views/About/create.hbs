<div class="mt-4">
    <h3>Cập nhật thành viên</h3>
    <form method="POST" action="/about/store">
        <div class="mb-3">
            <label for="name" class="form-label">Author Name</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Author quotes</label>
            <input type="text" class="form-control" id="quotes" name="quotes">
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Author origin</label>
            <input type="text" class="form-control" id="origin" name="origin">
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Author content</label>
            <input type="text" class="form-control" id="content" name="content">
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Author image</label>
            <input type="text" class="form-control" id="image" name="image">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
