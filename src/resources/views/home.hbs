<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="column col-sm-6 col-lg-4">
            <div class="card card-course-item">
                <a href="/courses/{{this.slug}}">
                    <img src={{this.image}} class="card-img-top" alt="..." style="height:200px">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}" class="text-decoration-none">
                        <h5 class="card-title text-decoration-none">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}


    </div>
</div>