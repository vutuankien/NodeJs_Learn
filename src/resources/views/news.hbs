<div class="mt-4">
  <div class="row">
    {{#each news}}
    <div class="col-lg-12 col-sm-12 mb-3">
      <div class="card">
        <h5 class="card-header card-author">{{this.author}}</h5>
        <div class="card-body row d-flex">
          <div class="col-lg-10">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <a href="/news/{{this.slug}}" class="btn btn-primary">Xem chi tiáº¿t</a>
          </div>
          <div class="col-lg-2">
            <img class="img-fluid rounded-circle" style="width: 160px; height:150px" src="{{this.image}}" alt="Card image cap">
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>