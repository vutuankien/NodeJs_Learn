<div class="mt-4">
    <div class="row">
        <div class="col-lg-2">
            <h3>author: {{news.author}}</h3>
        </div>
        <div class="col-lg-10">
            <h2 class="text-black">{{news.title}}</h2>
            <div style="width: 100%;">
                <img class="img-fluid" style="width: 100%; height:500px" src="{{news.image}}" alt="{{news.title}}">
            </div>
            <p style="font-size: 24px;">{{news.description}}</p>
            
        </div>
    </div>
</div>